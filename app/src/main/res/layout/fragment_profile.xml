<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="profile"
            type="com.example.careertree.model.profile.Profile" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hata! Tekrar Deneyiniz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/loadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="#2196F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/profileFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.profile.ProfileFragment">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/deleteUserButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="right|top"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:backgroundTint="#AFACAC"
                            android:text="Hesabı Sil"
                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageViewProfile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:downloadImage="@{profile.imageUrl}"
                            android:src="@drawable/baseline_account_circle_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageViewProfile"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#8C000000"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="Ad"
                            android:inputType="textMultiLine"
                            android:text="@{profile.name}"
                            android:textSize="@dimen/minimum_text_size"
                            tools:ignore="TextSizeCheck" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteSchools"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editTextName"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:hint="Okul"
                            android:text="@{profile.school}"
                            android:textSize="@dimen/minimum_text_size" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteSchoolDepartment"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/autoCompleteSchools"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:hint="Bölüm"
                            android:text="@{profile.universityDepartment}"
                            android:textSize="@dimen/minimum_text_size" />

                        <TextView
                            android:id="@+id/skillsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/autoCompleteSchoolDepartment"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Beceriler"
                            android:textSize="16dp"
                            tools:layout_editor_absoluteX="24dp"
                            tools:layout_editor_absoluteY="556dp" />

                        <MultiAutoCompleteTextView
                            android:id="@+id/autoCompleteSkills"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/skillsTitle"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:hint="Yetenekler"
                            android:text="@{profile.skills}"
                            android:textSize="@dimen/minimum_text_size"/>

                        <TextView
                            android:id="@+id/portfolioTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/autoCompleteSkills"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Portfolyo"
                            android:textSize="16dp"
                            tools:layout_editor_absoluteX="24dp"
                            tools:layout_editor_absoluteY="556dp" />


                        <EditText
                            android:id="@+id/editTextPortfolio"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/portfolioTitle"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#8C000000"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="Cv &amp; Portfolyo Link"
                            android:inputType="textMultiLine"
                            android:text="@{profile.portfolio}"
                            android:textSize="@dimen/minimum_text_size"
                            tools:ignore="TextSizeCheck" />

                        <Button
                            android:id="@+id/saveButton"
                            android:layout_below="@+id/editTextPortfolio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="110dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/lavender"
                            android:text="Save"
                            app:layout_anchorGravity="bottom|center"></Button>

                    </RelativeLayout>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>