<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:minHeight="175dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Yapay Zeka Geliştiriciliği"
                    android:textColor="#206494"
                    android:textSize="@dimen/maximum_title_text_size"></TextView>


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="235dp"
                    android:layout_marginTop="-30dp"
                    app:srcCompat="@drawable/ai"></ImageView>

                <TextView
                    android:id="@+id/personalSalaryCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/personal_salary_count_text_size"></TextView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/minSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:text="En Düşük"
                        android:textSize="@dimen/average_text_size"></TextView>

                    <TextView
                        android:id="@+id/avarageSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/minSalary"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="20dp"
                        android:text="Ortalama Maaş"
                        android:textSize="@dimen/average_text_size"></TextView>

                    <TextView
                        android:id="@+id/maxSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/avarageSalary"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="20dp"
                        android:text="En Yüksek"
                        android:textSize="@dimen/average_text_size"></TextView>


                    <TextView
                        android:id="@+id/priceMinSalary"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/minSalary"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/minimum_text_size"></TextView>

                    <TextView
                        android:id="@+id/priceAverageSalary"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/minSalary"
                        android:layout_toRightOf="@+id/priceMinSalary"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/minimum_text_size"></TextView>

                    <TextView
                        android:id="@+id/priceMaxSalary"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maxSalary"
                        android:layout_toRightOf="@+id/priceAverageSalary"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/minimum_text_size"></TextView>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/average_title_text_size"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Sektör Bilgisi"></TextView>

                <TextView
                    android:id="@+id/comparison"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/average_text_size"
                    android:text="Yapay zeka projelerinde genellikle Python tercih edilen bir dildir. Python, geniş bir kütüphane ekosistemine sahip olması hızlı prototip geliştirme yetenekleri,açık kaynak topluluğunun büyüklüğü ve makine öğrenimi gibi yapay zeka uygulamaları için özel kütüphanelerin bulunabilirliği nedeniyle tercih edilir.Java ve C++ gibi diller de bazı yapay zeka uygulamalarında kullanılabilir. Özellikle büyük ölçekli projelerde, performans veya belirli platformlara entegrasyon ihtiyaçları nedeniyle bu dillere başvurulabilir."></TextView>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hata! Tekrar Deneyiniz"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <ProgressBar
                    android:id="@+id/loadProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="#2196F3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_marginTop="5dp" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>