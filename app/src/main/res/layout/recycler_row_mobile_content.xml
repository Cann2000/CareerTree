<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mobileLanguage"
            type="com.example.careertree.model.mobile.MobileLanguage" />

        <variable
            name="listener"
            type="com.example.careertree.utility.ClickListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="@{listener::dataClicked}">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#CAD8E1"
                app:cardElevation="4dp"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:id="@+id/compareButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="end"
                    android:onClick="@{listener::compareClicked}"
                    android:comparedState="@{mobileLanguage.compared}"
                    ></ImageView>

                <!--
                <ImageView
                    android:id="@+id/starButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:onClick="@{listener::starClicked}"
                    android:starState="@{mobileLanguage.favorites}"
                    ></ImageView>
                    -->

                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="35dp"
                    android:downloadImage="@{mobileLanguage.imageUrl}" />

                <TextView
                    android:id="@+id/menuName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menuImage"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:gravity="center"
                    android:text="@{mobileLanguage.name}"
                    android:textAlignment="center"
                    android:textSize="@dimen/maximum_text_size"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</layout>
