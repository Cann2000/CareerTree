<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="web"
            type="com.example.careertree.model.web.WebFrontendLanguage" />

        <variable
            name="listener"
            type="com.example.careertree.utility.ClickListener" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="@{listener::dataClicked}">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="200dp"
                android:layout_height="210dp"
                app:cardCornerRadius="22dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#CAD8E1"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:downloadImage="@{web.imageUrl}"/>

                <TextView
                    android:id="@+id/menuName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menuImage"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:text="@{web.name}"
                    android:textAlignment="center"
                android:textSize="@dimen/maximum_text_size"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</layout>
